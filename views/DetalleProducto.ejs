<!DOCTYPE html>
<html lang="en">
<%- include('partials/encabesado.ejs') %>
    <body>
        <!-- vista parcial de header -->
        <%- include('partials/cabecera.ejs') %>
        <input type="checkbox" name="desplegar" id="desplegar" hidden>
        <ul id="menuVertical" >
            <li><a href="Index">Index</a></li>
            <li><a href="DetalleProducto">Producto</a></li>
            <li><a href="CarritoCompra">Carrito</a></li>
            <li><a href="#">Enlace</a></li>
            <li><a href="#">Enlace</a></li>
        </ul>
        <div id="locacionPagina">
            <p>Home > Producto</p>
        </div>
        <main id="areaPrincipal">
            <section id="vistaProducto">
            <!-- area imagenes -->
                <div> <!--para centrar despues en vista grande -->
                    <article id="imagenProducto">
                        <img id="imaPrin" src="/images/imagenesDeProductos/<%= producto.image ? producto.image : 'default-image.png' %>" alt="imagen producto">
                    </article>
                    <article id="carrusel">
                        <div class="flecha">
                            <img  src="/images/imagenesIndex/chevron_left_black_24dp.svg" alt="" srcset="">
                        </div>
                        <% for(let i=0 ; i< producto.imagesSec.length ; i++){  %>

                                <a href="#"  class="enlaceIma"  >
                                    <img class="min" id="imaSec<%- i+1%>"  src="/images/imagenesDeProductos/<%= producto.imagesSec[i]%>" alt="">
                                </a>
                                <!--  galeria en solo css -->
                                    <!-- <img class="max" src="/images/imagenesDeProductos/<%= producto.imagesSec[i]%>" alt=""> -->
                                <!--  galeria en solo css -->
                                
                        <% } %>
                        <div class="flecha">
                            <img src="/images/imagenesIndex/chevron_right_black_24dp.svg" alt="" srcset="">
                        </div>
                    </article>
                </div>
                <!-- </div> -->
            </section>
            <section id="vistaDescripcion">
            <!-- area descripcion -->
                <article id="descripcionProducto">
                    <strong>
                        <h2>
                            <%= producto.name %> 
                        </h2>
                    </strong>
                    <h4>
                        ID referencia: <%=  producto.id %> 
                    </h4>
                    <div id="grados">
                        <div id="puntaje">
                            <img src="/images/imagenesDetalleProducto/grade_black_24dp.svg" alt="" srcset="">
                            <img src="/images/imagenesDetalleProducto/grade_black_24dp.svg" alt="" srcset="">
                            <img src="/images/imagenesDetalleProducto/grade_black_24dp.svg" alt="" srcset="">
                            <img src="/images/imagenesDetalleProducto/grade_black_24dp.svg" alt="" srcset="">
                            <img src="/images/imagenesDetalleProducto/grade_black_24dp.svg" alt="" srcset="">
                            <p>(55)</p>
                        </div>
                    </div>
                    <div id="descripcion">
                        <p>
                            Disponible. 
                        </p>
                        <h3>
                            Descripci√≥n. 
                        </h3>
                        <p>
                            <%=  producto.description %> 
                        </p>
                        <h3>
                            Caracteristicas. 
                        </h3>
                        <ul>

                        </ul>
                            <% 
                            let caracteristicas = producto.features.split(",");
                            for(let i=0 ; i < caracteristicas.length ;i++){%>
                                <li><%= caracteristicas[i]%>.</li>
                            <% } %>
                        </ul>
                        <br>
                    </div>
                </article>
                <article id="CostoApagar">
                    <div id="precios">
                        <h4><%= producto.price %>$</h4>
                        <h5><%= producto.discount %>$</h5>
                        <h6><%= producto.discountRate %>%</h6>
                    </div>
                    <p>Stock: <%= producto.stock %></p>
                    <p>Cantidad:</p>
                    <div id="cantidad">
                        <div>-</div>
                        <div>10</div>
                        <div>+</div>
                    </div>
                    <br>
                    <button class="botonPrimario">Agregar a carrito</button>
                </article>
            <!-- area descripcion -->
            </section>

        </main>

        <!-- vista parcial de Footer -->
        <%- include('partials/pie.ejs') %>
        <script src="/js/DetalleProducto.js"></script>
    </body>
</html>